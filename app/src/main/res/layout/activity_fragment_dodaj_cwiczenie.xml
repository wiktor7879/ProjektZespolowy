<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iVx3"
        android:layout_width="47dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextIloscSerii"
        app:layout_constraintStart_toEndOf="@+id/editTextIloscSerii"
        app:layout_constraintTop_toTopOf="@+id/editTextIloscSerii"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@drawable/ic_x_icon" />

    <ImageView
        android:id="@+id/iVx2"
        android:layout_width="47dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextOpis"
        app:layout_constraintStart_toEndOf="@+id/editTextOpis"
        app:layout_constraintTop_toTopOf="@+id/editTextOpis"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@drawable/ic_x_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextIloscSerii"
        app:layout_constraintEnd_toStartOf="@+id/editTextIloscSerii"
        app:layout_constraintTop_toBottomOf="@+id/tvIloscSerii"
        app:srcCompat="@drawable/ic_gray_circle" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextOpis"
        app:layout_constraintEnd_toStartOf="@+id/editTextNazwaCwiczenia"
        app:layout_constraintTop_toBottomOf="@+id/tvOpis"
        app:srcCompat="@drawable/ic_gray_circle" />

    <TextView
        android:id="@+id/tVNazwaCwiczenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="72dp"
        android:text="@string/nazwa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNazwaCwiczenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:hint="@string/hintCwiczenie"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVNazwaCwiczenia" />

    <TextView
        android:id="@+id/tvOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="@string/opis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNazwaCwiczenia" />

    <EditText
        android:id="@+id/editTextOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:hint="@string/hintOpis"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOpis" />


    <TextView
        android:id="@+id/tvIloscSerii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="@string/ilosc_serii"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOpis" />

    <EditText
        android:id="@+id/editTextIloscSerii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:hint="@string/hintIloscSerii"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIloscSerii" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNazwaCwiczenia"
        app:layout_constraintEnd_toStartOf="@+id/editTextNazwaCwiczenia"
        app:layout_constraintTop_toBottomOf="@+id/tVNazwaCwiczenia"
        app:srcCompat="@drawable/ic_gray_circle" />

    <ImageView
        android:id="@+id/iVx1"
        android:layout_width="47dp"
        android:layout_height="18dp"
        android:onClick="cleanTB"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNazwaCwiczenia"
        app:layout_constraintStart_toEndOf="@+id/editTextNazwaCwiczenia"
        app:layout_constraintTop_toTopOf="@+id/editTextNazwaCwiczenia"
        app:layout_constraintVertical_bias="0.629"
        app:srcCompat="@drawable/ic_x_icon" />

    <Button
        android:id="@+id/btnDodajCwiczenie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="56dp"
        android:background="@color/colorPrimary"
        android:text="@string/dodaj"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIloscSerii" />


</android.support.constraint.ConstraintLayout>